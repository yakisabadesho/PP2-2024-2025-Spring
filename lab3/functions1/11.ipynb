    "def is_palindrome(s):\n",
    "    s = s.replace(\" \", \"\").lower()\n",
    "    return s == s[::-1]\n",
    "user_input = input(\"A word or a phrase: \")\n",
    "result = is_palindrome(user_input)\n",
    "if result:\n",
    "    print(user_input, \"is a palindrome.\")\n",
    "else:\n",
    "    print(user_input, \"is not a palindrome.\")"
   ]
